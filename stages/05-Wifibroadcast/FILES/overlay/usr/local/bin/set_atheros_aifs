#!/bin/bash

usage(){
    echo
    echo "set_atheros_aifs - Script to set Atheros module aifs parameter"
    echo
    echo "Usage: $0 <set_atheros_aifs> <aifs>"
    echo
    echo "Example: set_atheros_aifs 2"
    echo
    exit 1
}

[[ $# -eq 0 ]] && usage

cp /etc/modprobe.d/ath9k_hw.conf /etc/modprobe.d/ath9k_hw.conf.old

sed -i.bak -r -e's/aifs=[^ ]+/aifs='$1'/g' /etc/modprobe.d/ath9k_hw.conf

sync
echo
echo "atheros aifs set. You may power-off now or type \"reboot\" to restart"
echo
