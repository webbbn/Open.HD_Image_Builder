#!/bin/bash

usage(){
    echo
    echo "set_atheros_slottime - Script to set Atheros module slottime parameter"
    echo
    echo "Usage: $0 <set_atheros_slottime> <slottime>"
    echo
    echo "Example: set_atheros_slottime 9"
    echo
    exit 1
}

[[ $# -eq 0 ]] && usage

cp /etc/modprobe.d/ath9k_hw.conf /etc/modprobe.d/ath9k_hw.conf.old

sed -i.bak -r -e's/slottime=[^ ]+/slottime='$1'/g' /etc/modprobe.d/ath9k_hw.conf

sync
echo
echo "atheros slottime set. You may power-off now or type \"reboot\" to restart"
echo
