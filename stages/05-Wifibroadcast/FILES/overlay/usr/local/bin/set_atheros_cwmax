#!/bin/bash

usage(){
    echo
    echo "set_atheros_cwmax - Script to set Atheros module cwmax parameter"
    echo
    echo "Usage: $0 <set_atheros_cwmax> <cwmax>"
    echo
    echo "Example: set_atheros_cwmax 3"
    echo
    exit 1
}

[[ $# -eq 0 ]] && usage

cp /etc/modprobe.d/ath9k_hw.conf /etc/modprobe.d/ath9k_hw.conf.old

sed -i.bak -r -e's/cwmax=[^ ]+/cwmax='$1'/g' /etc/modprobe.d/ath9k_hw.conf

sync
echo
echo "atheros cwmax set. You may power-off now or type \"reboot\" to restart"
echo
