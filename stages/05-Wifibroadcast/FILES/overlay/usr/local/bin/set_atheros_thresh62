#!/bin/bash

usage(){
    echo
    echo "set_atheros_thresh62 - Script to set Atheros module thresh62 parameter"
    echo
    echo "Usage: $0 <set_atheros_thresh62> <thresh62>"
    echo
    echo "Example: set_atheros_thresh62 2"
    echo
    exit 1
}

[[ $# -eq 0 ]] && usage

cp /etc/modprobe.d/ath9k_hw.conf /etc/modprobe.d/ath9k_hw.conf.old

sed -i.bak -r -e's/thresh62=[^ ]+/thresh62='$1'/g' /etc/modprobe.d/ath9k_hw.conf

sync
echo
echo "atheros thresh62 set. You may power-off now or type \"reboot\" to restart"
echo
