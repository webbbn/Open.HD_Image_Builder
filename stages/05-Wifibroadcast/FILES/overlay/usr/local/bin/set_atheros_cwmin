#!/bin/bash

usage(){
    echo
    echo "set_atheros_cwmin - Script to set Atheros module cwmin parameter"
    echo
    echo "Usage: $0 <set_atheros_cwmin> <cwmin>"
    echo
    echo "Example: set_atheros_cwmin 0"
    echo
    exit 1
}

[[ $# -eq 0 ]] && usage

cp /etc/modprobe.d/ath9k_hw.conf /etc/modprobe.d/ath9k_hw.conf.old

sed -i.bak -r -e's/cwmin=[^ ]+/cwmin='$1'/g' /etc/modprobe.d/ath9k_hw.conf

sync
echo
echo "atheros cwmin set. You may power-off now or type \"reboot\" to restart"
echo
